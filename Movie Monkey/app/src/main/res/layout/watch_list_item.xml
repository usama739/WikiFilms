<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/watchListCover"
        android:layout_width="326dp"
        android:layout_height="448dp"
        android:layout_centerInParent="true"
        app:riv_corner_radius="12dp" />

    <TextView
        android:id = "@+id/watchListTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/watchListCover"
        android:textColor="@color/white"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        />

    <ProgressBar
        android:id="@+id/progressBarWA"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/watchListTitle"
        android:layout_alignStart="@+id/watchListCover"
        android:layout_alignTop="@+id/watchListCover"
        android:layout_alignEnd="@+id/watchListCover"
        android:layout_marginStart="139dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="194dp" />

    <!--<Button
        android:id="@+id/removeMovie"
